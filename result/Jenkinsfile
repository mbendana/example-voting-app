pipeline {
	agent any
	tools {
		nodejs 'NodeJS 18.5.0'
	}
	stages {
		stage('build') {
			when {
				changeset '**/result/**'
			}
			steps {
				echo 'Compiling result app'
				dir('result') {
					sh 'npm install'
				}
			}
		}
		stage('test') {
			when {
				changeset '**/result/**'
			}
			steps {
				echo 'Testing result app'
				dir('result') {
					sh 'npm install'
					sh 'npm test'
				}
			}
		}
	}
}
			
